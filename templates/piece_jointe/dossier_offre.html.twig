{% extends 'base.html.twig' %}

{% block title %}Dossiers {% endblock %}

{% block body %} 
 <div class="col-sm-12"> 
        <nav aria-label="breadcrumb">
   <ol class="breadcrumb">
    
      <li class="breadcrumb-item ">Dossiers   </li>
      <li class="breadcrumb-item active" aria-current="page">Offres   </li>
   </ol>
</nav> 
<div class="row">
{% for offre in offres %}
   
            <div class="col-3">
               <div class="card text-center">
              
                  <img src= "{{asset('assets/file/dossier.jpg')}}" class="card-img-top" alt="#">
                  <div class="card-body">
                     <h4 class="card-title">{{offre.REF}}</h4>
                     <a href="{{ path('pjs_offre_poste', {'id': offre.id}) }}"  class="btn btn-primary btn-block">Afficher</a>
                  </div>
               </div>
            </div>
{% endfor %}
            </div>
            </div>

{% endblock %}