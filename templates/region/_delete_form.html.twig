<form method="post" action="{{ path('region_delete', {'id_region': region.idRegion}) }}" onsubmit="return confirm('
Êtes-vous sûr de bien vouloir supprimer cet élément?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ region.idRegion) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
