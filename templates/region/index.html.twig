{% extends 'base.html.twig' %}

{% block title %}Region {% endblock %}

{% block body %}
      <div class="col-sm-12" >
               <nav aria-label="breadcrumb">
   <ol class="breadcrumb">
    
      <li class="breadcrumb-item active" aria-current="page">Regions</li>
   </ol>
</nav>
             <div class="card">
                    <div class="card-header d-flex justify-content-between">
                     <div class="header-title"> 
                  
                        <h4 class="card-title ">Liste Region</h4>
                     </div>
                  </div>
            <div class="card-body">
                <div class="table-responsive">


    <table class="table table-bordered table-responsive-md table-striped text-center  ">
        <thead>
            <tr>
                <th>Region</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                <td>{{ region.region }}</td>
                <td>
                    <a class="btn bg-info-light btn-rounded btn-sm my-0"  href="{{ path('region_edit', {'id_region': region.getIdRegion()}) }}">Modifier </a>
                    <a class="btn bg-light-light btn-rounded btn-sm my-0"   href="{{ path('region_show', {'id_region': region.getIdRegion()}) }}">Afficher</a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Vide </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 
    <a class="btn btn-primary" href="{{ path('region_new') }}">Ajouter Region</a>
     </div>
      </div>
       </div>
{% endblock %}
